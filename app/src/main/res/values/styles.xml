<resources>
    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.MaterialComponents.DayNight.NoActionBar.Bridge">

        <!-- Customize your theme here. -->
<!--
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
-->
<!--        <item name="actionBarSize">wrap_content</item>-->

    </style>

    <style name="AppTheme.AppBarOverlay">
    </style>

    <style name="AppTheme.PopupOverlay">
    </style>

    <style name="AppTheme.Header" parent = "TextAppearance.AppCompat.Headline">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginStart">10dp</item>
        <item name="android:layout_marginEnd">10dp</item>
        <item name="android:ellipsize">end</item>
        <item name="android:maxLines">2</item>
        <item name="android:visibility">visible</item>
    </style>

    <style name="AppTheme.Body" parent = "TextAppearance.AppCompat.Body1">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginStart">10dp</item>
        <item name="android:layout_marginEnd">10dp</item>
        <item name="android:ellipsize">end</item>
        <item name="android:gravity">start</item>
        <item name="android:maxLines">3</item>
        <item name="android:visibility">visible</item>
    </style>


    <style name="AppTheme.PadOverlay">
        <item name="android:layout_width">70dp</item>
        <item name="android:layout_height">70dp</item>
        <item name="android:background">@drawable/padcircle</item>
        <item name="android:layout_margin">@dimen/pinPadMargin</item>
        <item name="android:textSize">30sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:gravity">center</item>
    </style>

    <style name="AppTheme.PadDigitOverlay">
        <item name="android:layout_width">30dp</item>
        <item name="android:layout_height">30dp</item>
        <item name="android:foreground">@drawable/padcircle</item>
        <item name="android:foregroundTint">#9CA0A1</item>
    </style>

    <style name="AppTheme.HeaderEdit" parent = "TextAppearance.AppCompat.Display1">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:inputType">none</item>
        <item name="android:layout_marginStart">10dp</item>
        <item name="android:layout_marginEnd">10dp</item>
        <item name="android:ellipsize">end</item>
        <item name="android:maxLines">2</item>
        <item name="android:visibility">visible</item>
    </style>
    <style name="AppTheme.BodyEdit" parent = "TextAppearance.AppCompat.Large">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:inputType">none</item>
        <item name="android:layout_marginStart">10dp</item>
        <item name="android:layout_marginEnd">10dp</item>
        <item name="android:ellipsize">none</item>
        <item name="android:visibility">visible</item>
    </style>





</resources>